{sys, [
       {lib_dirs, ["../deps/"]},
       {rel, "derpflow", "1",
        [
         kernel,
         stdlib,
         sasl,
         derpflow
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "derpflow"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {excl_archive_filters, [".*"]},
       {app, sasl, [{incl_cond, include}]},
       {app, derpflow, [{incl_cond, include}, {lib_dir, ".."}]}
      ]}.

{target_dir, "derpflow"}.

{overlay_vars, "vars.config"}.

{overlay, [
           {mkdir, "data/ring"},
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"},
           {template, "files/derpflow", "bin/derpflow"},
           {template, "files/derpflow-admin", "bin/derpflow-admin"}
           ]}.
